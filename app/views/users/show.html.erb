<h1><%= @user.email %></h1>
<h1><%= @tweets.count %> Tweets</h1>
<h1><%= @user.followers.count %> Followers</h1>

<% if current_user != @user %>
  <% if @user.followers.map(&:user_id).include?(current_user.id) %>
    <%= link_to 'Follow', followers_path(user_id: @user.id), method: :post %>
  <% else %>
    <%= link_to 'Unfollow', follower_path(current_user.id), method: :delete %>
  <% end %>
<% end %>
<% @tweets.each do |tweet| %>
  <h3><%= tweet.description %></h3>
<% end %>
