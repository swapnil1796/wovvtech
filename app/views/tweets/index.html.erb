<% if user_signed_in? %>
  <%= link_to 'New', new_tweet_path %>
<% end %>
<table border='1'>
  <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.description %></td>
      <td><%= tweet.user.email %></td>
      <td><%= tweet.created_at.strftime('%d %B %Y') %></td>
      <td>
        <% if tweet.user == current_user %>
          <%= link_to 'Delete', tweet_path(tweet), method: :delete %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
